/* Basisopmaak voor de Storyline Prompt Editor */
:root {
  color-scheme: dark;
  font-family: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
  font-size: 16px;
  line-height: 1.4;
  --bg: #141419;
  --bg-panel: #1f1f26;
  --border: #2d2d36;
  --text: #e4e4e7;
  --muted: #9b9ba6;
  --primary: #3a6df0;
  --primary-text: #ffffff;
  --shadow: rgba(0, 0, 0, 0.4);
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
}

h1,
h2,
h3 {
  margin: 0;
  font-weight: 600;
}

textarea,
input,
button,
select {
  font: inherit;
  color: inherit;
}

.hidden {
  display: none !important;
}

.muted {
  color: var(--muted);
}

/* Audio Timeline Info Badge */
#audio-timeline-info-badge {
  display: none; /* Standaard verborgen */
  position: absolute;
  top: -8px;
  right: -8px;
  background: #f44336;
  color: white;
  border-radius: 50%;
  width: 24px;
  height: 24px;
  font-size: 16px;
  line-height: 24px;
  text-align: center;
  font-weight: bold;
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(244, 67, 54, 0.5);
  border: 2px solid white;
  z-index: 100;
  pointer-events: auto;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

#audio-timeline-info-badge:hover {
  transform: scale(1.1);
  box-shadow: 0 3px 8px rgba(244, 67, 54, 0.7);
}

#audio-timeline-info-badge.visible {
  display: block !important;
}

.app-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.25rem 1.5rem;
  background: var(--bg-panel);
  border-bottom: 1px solid var(--border);
  box-shadow: 0 1px 2px var(--shadow);
  position: sticky;
  top: 0;
  z-index: 10;
}

.title-group h1 {
  font-size: 1.5rem;
}

.subtitle {
  margin-top: 0.25rem;
  font-size: 0.95rem;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.language-switch {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
  margin-top: 0.35rem;
}

.language-switch span {
  font-weight: 500;
}

.language-switch select {
  padding: 0.35rem 0.5rem;
  border-radius: 6px;
  border: 1px solid var(--border);
  background: var(--bg-panel);
}

#root-path {
  max-width: 28ch;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.layout {
  display: grid;
  grid-template-columns: 320px 1fr;
  min-height: calc(100vh - 92px);
}

.sidebar {
  padding: 1.5rem;
  border-right: 1px solid var(--border);
  background: var(--bg);
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.panel {
  background: var(--bg-panel);
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 1rem 1.25rem;
  box-shadow: 0 4px 12px var(--shadow);
}

.panel header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 0.75rem;
}

.panel-actions {
  font-size: 0.9rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.projects-actions {
  margin-bottom: 0.75rem;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.panel-actions button {
  padding: 0.4rem 0.5rem;
  line-height: 1;
}

/* Split-button (export prompts + dropdown) */
.split-button {
  display: inline-flex;
  align-items: center;
  gap: 0;
}
.split-button > button {
  border-radius: 8px;
  margin: 0;
  padding: 0.55rem 0.9rem; /* match regular button sizing */
  font: inherit;
  font-size: 1rem;
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
}
.split-button > button:first-child {
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  padding-right: 0.6rem;
}
.split-button > button:last-child {
  border-top-left-radius: 0;
  border-bottom-left-radius: 0;
  padding: 0 0.6rem;
  border-left: 1px solid var(--border);
  background: linear-gradient(90deg, rgba(255,255,255,0.02), rgba(255,255,255,0));
}

/* Ensure the small dropdown button matches the full height of the main button */
#export-prompts-dropdown {
  height: 100%;
}

/* Compact export-choice dialog styling */
.export-choice-dialog {
  padding: 1rem 1.2rem;
  max-width: 420px;
}
.export-choice-dialog h3 {
  margin: 0 0 0.35rem 0;
  font-size: 1rem;
}
.export-choice-dialog p {
  margin: 0 0 0.6rem 0;
  color: var(--muted);
  font-size: 0.95rem;
}
.export-choice-dialog menu {
  display: flex;
  gap: 0.5rem;
  justify-content: flex-end;
  margin-top: 0.5rem;
}
.export-choice-dialog menu button {
  padding: 0.45rem 0.7rem;
  font-size: 0.95rem;
}

/* Make the split-button visually tighter */
.split-button > button {
  padding-left: 0.6rem;
  padding-right: 0.6rem;
}

.projects-actions .sort-label {
  display: flex;
  flex-direction: column;
  gap: 0.3rem;
}

.projects-actions select {
  width: 100%;
}

.panel-actions select {
  padding: 0.3rem 0.4rem;
  border-radius: 6px;
  border: 1px solid var(--border);
  background: var(--bg-panel);
}

.project-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 0.6rem;
  max-height: 48vh;
  overflow-y: auto;
}

.project-item {
  border: 1px solid var(--border);
  border-radius: 10px;
  padding: 0.75rem 0.9rem;
  background: var(--bg);
  display: grid;
  gap: 0.25rem;
  cursor: pointer;
  transition: border-color 0.15s ease, box-shadow 0.15s ease;
}

.project-item:hover,
.project-item.active {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(34, 81, 255, 0.15);
}

.project-item span {
  font-size: 0.85rem;
}

.form-grid {
  display: grid;
  gap: 0.75rem;
}

.form-grid label {
  display: grid;
  gap: 0.3rem;
  font-size: 0.92rem;
}

input[type="text"],
textarea {
  padding: 0.55rem 0.65rem;
  border-radius: 8px;
  border: 1px solid var(--border);
  background: var(--bg);
  resize: vertical;
}

input:disabled {
  opacity: 0.7;
}

button {
  border: none;
  padding: 0.55rem 0.9rem;
  border-radius: 8px;
  background: var(--bg-panel);
  border: 1px solid var(--border);
  cursor: pointer;
  transition: background 0.2s ease, border-color 0.2s ease;
}

button:hover:not(:disabled) {
  border-color: var(--primary);
}

button.primary {
  background: var(--primary);
  color: var(--primary-text);
  border: 1px solid var(--primary);
}

button.primary:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

button.danger {
  background: #dc3545;
  color: white;
  border: 1px solid #dc3545;
}

button.danger:hover:not(:disabled) {
  background: #c82333;
  border-color: #c82333;
}

button.danger:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.workspace {
  padding: 1.5rem 2rem;
  overflow-y: auto;
}

.empty-state {
  margin-top: 15vh;
  text-align: center;
  background: var(--bg-panel);
  padding: 2.5rem 2rem;
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: 0 18px 26px var(--shadow);
}

.project-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1rem;
  margin-bottom: 1.5rem;
  border-bottom: 1px solid var(--border);
  padding-bottom: 1rem;
}

.project-meta {
  display: grid;
  gap: 0.2rem;
  font-size: 0.95rem;
}

.project-actions {
  display: flex;
  gap: 0.5rem;
}

.metadata {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 1.25rem;
  margin-bottom: 1.5rem;
}

.metadata label {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
}

.field {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
}

.field span {
  font-weight: 500;
}

.prompts-panel {
  background: var(--bg-panel);
  border: 1px solid var(--border);
  border-radius: 14px;
  padding: 1.5rem;
  box-shadow: 0 18px 36px var(--shadow);
}

.prompts-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 0.75rem;
}

.prompts-container {
  display: flex;
  gap: 1rem;
  align-items: stretch;
  overflow-x: auto;
  padding-bottom: 0.5rem;
  scroll-snap-type: x proximity;
}

.prompt-card {
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 1rem;
  display: grid;
  gap: 0.8rem;
  background: var(--bg);
  transition: border-color 0.2s;
  min-width: 320px;
  max-width: 360px;
  scroll-snap-align: start;
  position: relative;
}

.prompt-card.dragging {
  opacity: 0.6;
  border-color: var(--primary);
}

.prompt-card.drag-over .image-preview {
  border-color: var(--primary);
  border-style: solid;
}

.video-uploader.drag-over,
.image-uploader.drag-over {
  border-color: var(--primary);
  border-style: solid;
  background-color: rgba(34, 81, 255, 0.05);
}

.prompt-card:focus-within {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(34, 81, 255, 0.12);
}

.prompt-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.prompt-card-title {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.prompt-card-actions {
  display: flex;
  gap: 0.25rem;
  align-items: center;
}

.prompt-card-actions button,
.prompt-card-title button {
  padding: 0.35rem 0.45rem;
  font-size: 0.95rem;
}

.prompt-card-actions .drag-handle {
  cursor: grab;
}

.prompt-card-actions .drag-handle:active {
  cursor: grabbing;
}

.field textarea {
  min-height: 80px;
}

.image-uploader {
  display: grid;
  gap: 0.75rem;
}

.image-preview {
  border: 1px dashed var(--border);
  border-radius: 10px;
  height: 180px;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: var(--bg-panel);
  position: relative;
}

.image-preview img {
  max-height: 100%;
  max-width: 100%;
  object-fit: contain;
  display: none;
}

.image-preview .placeholder {
  color: var(--muted);
  text-align: center;
  padding: 0.5rem;
}

.image-uploader[data-has-image="true"] .placeholder {
  display: none;
}

.image-uploader[data-has-image="true"] img {
  display: block;
}

.image-actions {
  display: flex;
  gap: 0.5rem;
}

.upload-button {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  cursor: pointer;
}

.upload-button input {
  display: none;
}

.remove-image {
  background: transparent;
  border: none;
  padding: 0.4rem 0.6rem;
  color: var(--muted);
}

.remove-image:hover {
  color: #d9534f;
}

/* Media toggle (image/video keuze) */
.media-toggle {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 0.75rem;
  border-bottom: 1px solid var(--border);
  padding-bottom: 0.5rem;
}

.media-toggle button {
  flex: 1;
  padding: 0.5rem 1rem;
  border: 1px solid var(--border);
  background: var(--bg-panel);
  border-radius: 6px;
  cursor: pointer;
  transition: all 0.2s;
}

.media-toggle button.active {
  background: var(--primary);
  color: var(--primary-text);
  border-color: var(--primary);
}

.media-toggle button:hover:not(.active) {
  background: var(--border);
}

/* Attachment button styling */
.attachment-button {
  flex: 0 0 auto !important;
  min-width: auto !important;
  padding: 0.5rem 0.75rem !important;
  position: relative;
}

.attachment-badge {
  position: absolute;
  top: -4px;
  right: -4px;
  background: #f44336;
  color: white;
  font-size: 0.7rem;
  font-weight: bold;
  border-radius: 50%;
  width: 18px;
  height: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2px solid var(--bg-panel);
}

/* Attachments Dialog */
.attachments-dialog {
  max-width: 700px;
  width: 90vw;
  max-height: 80vh;
  border: none;
  border-radius: 12px;
  padding: 0;
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
}

.attachments-dialog::backdrop {
  background: rgba(0, 0, 0, 0.6) !important;
}

.attachments-dialog .dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.2rem 1.5rem;
  border-bottom: 1px solid var(--border);
}

/* ============================================================================
   TRANSITIONS - Overgangen tussen scenes
   ============================================================================ */

/* Transitie wrapper tussen scenes */
.transition-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 60px;
  flex-shrink: 0;
}

/* Transitie button met + icon en status indicator */
.transition-button {
  position: relative;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: 2px solid var(--border);
  background: var(--bg-panel);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  padding: 0;
}

.transition-button:hover {
  border-color: var(--primary);
  background: var(--bg);
  transform: scale(1.1);
  box-shadow: 0 4px 12px rgba(58, 109, 240, 0.3);
}

.transition-button:active {
  transform: scale(1.05);
}

/* Plus icon */
.transition-icon {
  font-size: 24px;
  font-weight: 300;
  color: var(--muted);
  transition: color 0.2s ease;
}

.transition-button:hover .transition-icon {
  color: var(--primary);
}

/* Status indicator - bolletje rechtsbovenin */
.transition-indicator {
  position: absolute;
  top: -4px;
  right: -4px;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 2px solid var(--bg);
  transition: background-color 0.2s ease, transform 0.2s ease;
}

/* Grijs bolletje - geen transitie beschrijving */
.transition-indicator.empty {
  background-color: #5a5a66;
}

/* Groen bolletje - transitie beschrijving aanwezig */
.transition-indicator.filled {
  background-color: #4caf50;
  box-shadow: 0 0 8px rgba(76, 175, 80, 0.4);
}

.transition-button:hover .transition-indicator.filled {
  transform: scale(1.2);
  box-shadow: 0 0 12px rgba(76, 175, 80, 0.6);
}

/* Transitie Dialog */
.transition-dialog {
  max-width: 650px;
  width: 90vw;
  max-height: 85vh;
  border: none;
  border-radius: 12px;
  padding: 0;
  background: var(--bg-panel);
  color: var(--text);
  box-shadow: 0 16px 40px rgba(0, 0, 0, 0.25);
}

.transition-dialog::backdrop {
  background: rgba(0, 0, 0, 0.7) !important;
}

.transition-dialog .dialog-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.2rem 1.5rem;
  border-bottom: 1px solid var(--border);
  background: var(--bg);
}

.transition-dialog .dialog-header h3 {
  margin: 0;
  font-size: 1.25rem;
  color: var(--text);
}

.transition-dialog .close-dialog {
  background: none;
  border: none;
  font-size: 1.5rem;
  color: var(--muted);
  cursor: pointer;
  padding: 0.25rem 0.5rem;
  border-radius: 4px;
  transition: all 0.2s ease;
}

.transition-dialog .close-dialog:hover {
  color: var(--text);
  background: var(--border);
}

.transition-dialog .dialog-content {
  padding: 1.5rem;
  overflow-y: auto;
  max-height: calc(85vh - 160px);
}

.transition-help {
  margin: 0 0 1.5rem 0;
  color: var(--muted);
  font-size: 0.95rem;
  line-height: 1.5;
  padding: 1rem;
  background: rgba(58, 109, 240, 0.1);
  border-left: 3px solid var(--primary);
  border-radius: 4px;
}

.transition-dialog label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text);
}

.label-hint {
  display: block;
  font-size: 0.85rem;
  color: var(--muted);
  font-weight: normal;
  margin-top: 0.25rem;
}

.transition-textarea {
  width: 100%;
  min-height: 120px;
  padding: 0.75rem;
  border: 1px solid var(--border);
  border-radius: 8px;
  background: var(--bg);
  color: var(--text);
  resize: vertical;
  font-family: inherit;
  font-size: 0.95rem;
  line-height: 1.5;
  transition: border-color 0.2s ease;
}

.transition-textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(58, 109, 240, 0.1);
}

.transition-textarea::placeholder {
  color: var(--muted);
  opacity: 0.6;
}

/* Transitie voorbeelden */
.transition-examples {
  margin-top: 1.5rem;
  padding: 1rem;
  background: var(--bg);
  border-radius: 8px;
  border: 1px solid var(--border);
}

.transition-examples strong {
  display: block;
  margin-bottom: 0.75rem;
  color: var(--text);
  font-size: 0.95rem;
}

.transition-examples ul {
  margin: 0;
  padding-left: 1.5rem;
  color: var(--muted);
  font-size: 0.9rem;
  line-height: 1.8;
}

.transition-examples li {
  margin-bottom: 0.5rem;
}

.transition-examples li strong {
  display: inline;
  color: var(--primary);
  font-size: inherit;
  margin: 0;
}

.transition-dialog .dialog-footer {
  display: flex;
  gap: 0.75rem;
  justify-content: flex-end;
  padding: 1rem 1.5rem;
  border-top: 1px solid var(--border);
  background: var(--bg);
}

.transition-dialog .dialog-footer button {
  padding: 0.6rem 1.25rem;
  border-radius: 6px;
  border: none;
  cursor: pointer;
  font-weight: 500;
  transition: all 0.2s ease;
}

.transition-dialog .btn-cancel,
.transition-dialog .btn-clear {
  background: var(--bg-panel);
  color: var(--text);
  border: 1px solid var(--border);
}

.transition-dialog .btn-cancel:hover,
.transition-dialog .btn-clear:hover {
  background: var(--border);
}

.transition-dialog .btn-save {
  background: var(--primary);
  color: var(--primary-text);
}

.transition-dialog .btn-save:hover {
  background: #4e7ef8;
  box-shadow: 0 4px 12px rgba(58, 109, 240, 0.3);
  background: var(--bg-secondary);
  border-radius: 12px 12px 0 0;
}

.attachments-dialog h3 {
  margin: 0;
  font-size: 1.1rem;
  color: var(--text-primary);
}

.close-attachments {
  background: none;
  border: none;
  font-size: 1.8rem;
  cursor: pointer;
  padding: 0;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 6px;
  color: var(--text-secondary);
  transition: all 0.2s;
  line-height: 1;
}

.close-attachments:hover {
  background: var(--bg-hover);
  color: var(--text-primary);
}

.attachment-dropzone {
  padding: 2rem;
  border: 2px dashed var(--border);
  border-radius: 8px;
  margin: 1.5rem;
  text-align: center;
  background: var(--bg-panel);
  transition: all 0.2s;
}

.attachment-dropzone.drag-over {
  border-color: var(--primary);
  background: rgba(var(--primary-rgb), 0.05);
}

.attachment-dropzone p {
  margin: 0.5rem 0;
  color: var(--text-secondary);
}

.dropzone-hint {
  font-size: 0.85rem;
  color: var(--muted);
}

.attachments-gallery-wrapper {
  padding: 0 1.5rem 1.5rem;
  min-height: 40px;
}

.attachments-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
  gap: 0.75rem;
  max-height: 350px;
  overflow-y: auto;
  min-height: 20px; /* Zorg dat de grid altijd bestaat */
}

/* Verberg gallery wrapper als er geen items zijn */
.attachments-gallery-wrapper:empty {
  display: none;
}

.no-attachments {
  grid-column: 1 / -1;
  text-align: center;
  color: var(--muted);
  padding: 2rem;
}

.attachment-item {
  position: relative;
  border: 1px solid var(--border);
  border-radius: 8px;
  padding: 0.5rem;
  cursor: pointer;
  transition: all 0.2s;
  background: var(--bg-panel);
}

.attachment-item:hover {
  border-color: var(--primary);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px);
}

.attachment-preview {
  width: 100%;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-secondary);
  border-radius: 4px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.attachment-preview img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

